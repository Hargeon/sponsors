$(document).ready(function(){
  <% if @interest.errors.any? %>
    $("#form-error").html("<%= j render 'partials/error', record: @interest %>");
  <% else %>
    $('#new-interest form').remove();
    $("#form-error").html("");
    let responded = Number($('#responded').text().split(' ').pop());
    responded++;
    $("#responded").text(`Responded: ${responded}`);
  <% end %>
})
