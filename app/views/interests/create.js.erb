$(document).ready(function(){
  <% if @interest.errors.any? %>
    $("#form-error").html("<%= j render 'partials/error', record: @interest %>");
  <% else %>
    $('#new-interest form').remove();
    $("#form-error").html("");
    let responded = <%= idea_interests_count(@interest.idea_id) %>
    $("#responded").text(`${responded}`);
  <% end %>
})
