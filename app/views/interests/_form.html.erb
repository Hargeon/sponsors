<%= form_for(@interest, remote: true) do |f| %>

  <div class="field">
    <%= t(:message) %> <br>
    <%= f.text_field :message, class: 'form-control' %> <br>
  </div>

  <%= f.hidden_field :idea_id, value: params[:idea_id] %>

  <%= f.submit t(:respond), class: 'btn btn-outline-primary' %>
<% end %>
