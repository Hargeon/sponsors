<div class="registration">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t(:email) %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: t(:password) %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= t(:remember) %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t(:sign_in), class: 'btn btn-outline-success' %>
  </div>
<% end %>
