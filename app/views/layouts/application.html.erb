<!DOCTYPE html>
<html>
  <head>
    <title>Sponsors</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div>
        <span class="notice text-warning"><%= notice %></span>
        <span class="alert text-danger"><%= alert %></span>
      </div>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <%= link_to t(:home), ideas_path, class: 'btn btn-outline-light' %>

          <% if user_signed_in? %>
            <% if can?(:create, Idea) %>
              <%= link_to t(:create_idea), new_idea_path, class: 'btn btn-outline-success' %>
            <% end %>
          <% end %>

          <%= form_for :term, url: search_ideas_path, html: { class: "form-inline my-2 my-lg-0" } do |form| %>
            <%= text_field_tag :term, params[:term], class: 'form-control mr-sm-2', id: 'search', autocomplete: 'off', list: 'autofill' %>
            <%= form.submit t(:search), class: 'btn btn-outline-success my-2 my-sm-0' %>
          <% end %>

          <datalist id="autofill"></datalist>

        </ul>
      </div>
      <% if user_signed_in? %>
        <% if current_user.sponsor? %>
          <%= link_to current_user.email, sponsor_path(current_user), class: "btn btn-outline-light" %>
        <% else %>
          <%= link_to current_user.email, businessman_path(current_user), class: "btn btn-outline-light" %>
        <% end %>
        <%= link_to t(:log_out), destroy_user_session_path, method: :delete, data: { confirm: t(:sign_out) }, class: "btn btn-outline-danger" %>
      <% else %>
        <%= link_to t(:sign_in), new_user_session_path, class: "btn btn-outline-warning" %>
        <%= link_to t(:sign_up), new_user_registration_path, class: "btn btn-outline-danger" %>
      <% end %>
    </nav>

    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
