<h1>Edit:</h1>

<%= render 'flash_errors' %>

<%= form_for @idea do |f| %>

  <%= render  "plain_information", form: f %>

  <p>
    Industries: <br>
    <%= f.collection_select(:local_industries, Industry.all, :id, :name,
    { include_hidden: false, selected: @idea.industries.map(&:id) },
    { multiple: true, name: 'idea[local_industries_attributes][][industry_id]' }) %>
  </p>

  <p>
    Districts: <br>
    <%= f.collection_select(:local_districts, District.all, :id, :name,
    { include_hidden: false , selected: @idea.districts.map(&:id) },
    { multiple: true, name: 'idea[local_districts_attributes][][district_id]' }) %>
  </p>

  <p>
    Members: <br>
    <%= render  "members", idea: @idea %>
  </p>

  <p>
    We need: <br>
    <%= f.collection_select(:local_require_helps, RequireHelp.all, :id, :name,
    { include_hidden: false, selected: @idea.require_helps.map(&:id) },
    { multiple: true, name: 'idea[local_require_helps_attributes][][require_help_id]' }) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to  "Back", ideas_path %>
