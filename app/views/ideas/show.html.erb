<%= @idea.name %> <br>

<p>
  Description: <br>
  <%= @idea.description %> <br>
</p>

<p>
  Plan: <br>
  <%= @idea.plan %> <br>
</p>

<dl>
  <dt>Industries:</dt>
  <% @idea.industries.each do |industry| %>
    <dd><%= industry.name %></dd>
  <% end %>
</dl>

<dl>
  <dt>Districts:</dt>
  <% @idea.districts.each do |district| %>
    <dd><%= district.name %></dd>
  <% end %>
</dl>

<dl>
  <dt>Members:</dt>
  <% @idea.local_members.each do |local_member| %>
    <dd><%= local_member.member.name %> 
      <%= local_member.amount %></dd>
  <% end %>
</dl>

<dl>
  <dt>We need:</dt>
  <% @idea.require_helps.each do |need| %>
    <dd><%= need.name %></dd>
  <% end %>
</dl>

Responded: <%= @idea.interests.size %> 
<% if user_signed_in? %>
  <% if current_user.businessman? %>
    <% @idea.interests.each do |interest| %>
      <%= User.find(interest.user_id).email %> 
    <% end %>
  <% end %>
<% end %> <br>

<% if can? :create, Interest %>
  <% unless user_was_interested?(@idea) %>
    <%= link_to 'I can help', interests_path(idea_id: @idea.id), method: :post  %>
  <% end %>
<% end %>
<br>

<%= link_to  "Back", ideas_path %>
